extends ./main.pug 

block head
  style.
    p{
      margin: 0 2em 0;
    }

block main
  if configuration.components.length > 0
    mixin component(urlname)
      - let c = getComponent(urlname);
      div.m-3.p-3.border.rounded
        h3: a(href=c.urlname).text-decoration-none= c.name
        p= c.description
    - for(let urlname of configuration.components)
      +component(urlname)
  else 
    p No components added to this application.